{#{{ dump(edit_part.getIdInStock().getId()) }}#}
{#Форма сохранения деталей#}
    {{ form_start(form_p_n_edit, {'action': path('edit_part')}) }}
        {#Переменный для вывода данных в форме когда форма не прошла валидацию#}
        {% set sales_part_numbers = edit_part.getPartNumbers()|default('') %}
        {% set sales_manufacturers = edit_part.getManufacturers()|default('') %}
        {% set sales_name_detail = edit_part.getNameDetail()|default('') %}
        {% set sales_id_part_name = edit_part.getIdPartName().getId()|default('') %}
