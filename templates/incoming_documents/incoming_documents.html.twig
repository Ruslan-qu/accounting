{% extends 'base.html.twig' %}

{% block title %}{{title_logo}}{% endblock %}

{% block logo %}{{title_logo}}{% endblock %}

{% block legend %}{{legend}}{% endblock legend%}

{% block form %}
    {{ form_start(form_i_d) }}
        <th>{{ form_label(form_i_d.id_invoice) }}<br>
        {{ form_widget(form_i_d.id_invoice) }}
        {{ form_errors(form_i_d.id_invoice) }}</th>
        <th>{{ form_label(form_i_d.data_invoice) }}<br>
        {{ form_widget(form_i_d.data_invoice) }}
        {{ form_errors(form_i_d.data_invoice) }}</th>
        {{ form_start(form_p_n) }}
        <th>{{ form_label(form_p_n.Id_details) }}<br>
        {{ form_widget(form_p_n.Id_details) }}
        {{ form_errors(form_p_n.Id_details) }}</th>
        <th>{{ form_label(form_p_n.manufacturer) }}<br>
        {{ form_widget(form_p_n.manufacturer) }}
        {{ form_errors(form_p_n.manufacturer) }}</th>
        {{ form_end(form_p_n) }}
        <th>{{ form_label(form_i_d.name_detail) }}<br>
        {{ form_widget(form_i_d.name_detail) }}
        {{ form_errors(form_i_d.name_detail) }}</th>
        <th>{{ form_label(form_i_d.quantity) }}<br>
        {{ form_widget(form_i_d.quantity) }}
        {{ form_errors(form_i_d.quantity) }}</th>
        <th>{{ form_label(form_i_d.unit_price) }}<br>
        {{ form_widget(form_i_d.unit_price) }}
        {{ form_errors(form_i_d.unit_price) }}</th>
        <th>{{ form_label(form_i_d.price) }}<br>
        {{ form_widget(form_i_d.price) }}
        {{ form_errors(form_i_d.price) }}</th>
        <th><button class="save" type="submit">Сохранить</button></th>
        
{% endblock %}

{% block table_thead_tr %}
<th>№ Накладной</th>
<th>Дата накладной</th>
<th>Поставщик</th>
<th>№ Детали</th>
<th>Производитель</th>
<th>Описание детали</th>
<th>Количество</th>
<th>Цена шт</th>
<th>Цена общая</th>
<th>Продано шт</th>
<th>Продано Цена</th>
<th>Дата прод-жи</th>
<th>Продано</th>
<th>Возврат</th>
{% endblock %}

{% block tbody %}
