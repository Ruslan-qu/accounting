    <td>2</td>
    <td>3</td>
    <td>4</td>
    <td>5</td>
    <td>6</td>
    <td>7</td>
    <td>7</td>
    <td>7</td>
    <td>{{ form_row(form_i_d.quantity_sold) }}</td>
    <td>{{ form_row(form_i_d.price_sold) }}</td>
    <td>{{ form_row(form_i_d.today_date) }}</td>
    <td><button class="sales" type="submit">Продано</button></td>
    <td><button class="refund" type="submit">Возврат</button></td>
    {{ form_end(form_i_d) }}
{% endblock %}