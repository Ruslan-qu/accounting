{% block title %}{{title_logo}}{% endblock %}

{% block logo %}{{title_logo}}{% endblock %}

{% block legend %}{{legend}}{% endblock legend%}

{% block form %}
    {{ form_start(form_c) }}
        <th>{{ form_label(form_c.counterparty) }}<br>
        {{ form_widget(form_c.counterparty) }}
        {{ form_errors(form_c.counterparty) }}</th>
        <th>{{ form_label(form_c.mail_counterparty) }}<br>
        {{ form_widget(form_c.mail_counterparty) }}
        {{ form_errors(form_c.mail_counterparty) }}</th>
        <th><button class="save" type="submit">Сохранить</button></th>
    {{ form_end(form_c) }}
{% endblock %}

